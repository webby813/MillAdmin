<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mill_row_items"
        style="@style/MillRowCardStyle"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                android:id="@+id/Mill_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/mill_name"
                    style="@style/MillRowTextViewStyle"
                    android:text=""/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/view_users"
                style="@style/RightImageBtnStyle"
                android:background="@drawable/group_icon"
                android:contentDescription="group"/>

            <ImageButton
                android:id="@+id/edit_mill"
                style="@style/RightImageBtnStyle"
                android:background="@drawable/edit_icon"
                android:contentDescription="Delete"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
